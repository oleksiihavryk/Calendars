@model RegisterViewModel
@{
    ViewBag.Title = "Sign Up";
}
<div class="m-auto">
    <div class="errors" asp-validation-summary="All" hidden="@ViewContext.ModelState.IsValid"></div>
    <form class="bg-warning p-3 m-2" 
          asp-action="Register" asp-controller="Account" method="post">
        <h3 class="text-center text-white">Registration</h3>
        <div class="form-floating mb-3 mt-3">
            <input asp-for="Email" class="form-control" placeholder="Enter email">
            <label asp-for="Email"></label>
        </div>
        <div class="form-floating mb-3 mt-3">
            <input asp-for="Name" class="form-control" placeholder="Enter name" />
            <label asp-for="Name"></label>
        </div>
        <div class="form-floating mb-3 mt-3">
            <input asp-for="Password" class="form-control" placeholder="Enter password" />
            <label asp-for="Password"></label>
        </div>
        <div class="form-floating mb-3 mt-3">
            <input asp-for="PasswordConfirmation" class="form-control" placeholder="Enter password" />
            <label asp-for="PasswordConfirmation"></label>
            <div class="text-white text-end">
                <label for="ShowPassword">Show passwords</label>
                <input id="ShowPassword" type="checkbox" />
            </div>
            <script>
                document.querySelector("#ShowPassword")
                    .addEventListener(
                        "click",
                        function () {
                            const el1 = document.querySelector("#Password");
                            const el2 = document.querySelector("#PasswordConfirmation");
                            if (el1.getAttribute("type") === "password" && 
                                el2.getAttribute("type") === "password") {    
                                el1.setAttribute("type", "text")
                                el2.setAttribute("type", "text")
                            } else {
                                el1.setAttribute("type", "password");
                                el2.setAttribute("type", "password");
                            }
                        });
            </script>
        </div>
        <input asp-for="ReturnUrl" hidden/>
        <input asp-for="CancelUrl" hidden/>
        <section class="text-center">
            <button class="btn btn-sm btn-light m-2" type="submit">Submit</button>
            <a class="btn btn-sm btn-danger m-2" href="@Model.CancelUrl">Cancel</a>
        </section>
    </form>
    <p class="m-2 text-white">
        If you already have an account,
        <a asp-action="Login" asp-controller="Account"
           asp-route-returnUrl="@Model.ReturnUrl"
           class="link link-light">
            click here<!--
        --></a>
        to log in!
    </p>
</div>