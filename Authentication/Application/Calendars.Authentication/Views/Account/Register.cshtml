@model RegisterViewModel
@{
    ViewBag.Title = "Sign Up";
}
<div class="m-auto">
    <form class="bg-warning p-3 m-2" 
          asp-action="Register" asp-controller="Account" method="post">
        <div class="errors" asp-validation-summary="All" hidden="@ViewContext.ModelState.IsValid"></div>
        <h3 class="text-center text-white">Register</h3>
        <div class="form-floating mb-3 mt-3">
            <input asp-for="Email" class="form-control" placeholder="Enter email">
            <label asp-for="Email"></label>
        </div>
        <div class="form-floating mb-3 mt-3">
            <input asp-for="Name" class="form-control" placeholder="Enter name" />
            <label asp-for="Name"></label>
        </div>
        <div class="form-floating mb-3 mt-3">
            <input asp-for="Password" class="form-control" placeholder="Enter password" />
            <label asp-for="Password"></label>
        </div>
        <div class="form-floating mb-3 mt-3">
            <input asp-for="PasswordConfirmation" class="form-control" placeholder="Enter password" />
            <label asp-for="PasswordConfirmation"></label>
        </div>
        <input asp-for="ReturnUrl" hidden/>
        <section class="text-center">   
            <button class="btn btn-sm btn-light m-2" type="submit">Submit</button>
            <a class="btn btn-sm btn-danger m-2" href="@Model.ReturnUrl">Cancel</a>
        </section>
    </form>
    <p class="m-2">
        If you already have an account,
        <a asp-action="Login" asp-controller="Account"
           asp-route-returnUrl="@Model.ReturnUrl">
            click here</a>
        to log in!
    </p>
</div>